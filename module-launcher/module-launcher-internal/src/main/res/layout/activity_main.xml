<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_rectangle_selector"
        android:baselineAligned="false"
        android:clickable="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/tab_home_icon_selector"
                android:gravity="bottom|center_horizontal"
                android:lines="1"
                android:text="@string/text_tab_home"
                android:textColor="@color/tab_text_color_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/tab_client_icon_selector"
                android:gravity="bottom|center_horizontal"
                android:lines="1"
                android:text="@string/text_tab_clients"
                android:textColor="@color/tab_text_color_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/tab_message_icon_selector"
                android:gravity="bottom|center_horizontal"
                android:lines="1"
                android:text="@string/text_tab_messages"
                android:textColor="@color/tab_text_color_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/tab_mine_icon_selector"
                android:gravity="bottom|center_horizontal"
                android:lines="1"
                android:text="@string/text_tab_mine"
                android:textColor="@color/tab_text_color_selector" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLayout" />

</RelativeLayout>
